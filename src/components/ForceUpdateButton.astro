<div class="text-center mt-12" client:visible>
      <button
            id="force-update-btn"
            class="text-sm text-red-500 dark:text-red-400 hover:text-blue-600 dark:hover:text-blue-400 underline transition-colors"
      >
            Page out of date? Force refresh from server.
      </button>
</div>

<script>
      const button = document.getElementById("force-update-btn");

      if (button) {
            button.addEventListener("click", () => {
                  // Create a URL object from the current location
                  const url = new URL(window.location.href);
                  // Add our special query parameter
                  url.searchParams.set("forceNetwork", "true");

                  // Navigate to the new URL, which will trigger a full reload
                  window.location.href = url.toString();
            });
      }
</script>
