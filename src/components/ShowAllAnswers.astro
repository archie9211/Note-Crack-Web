<div class="text-center my-8" client:visible>
      <button
            id="show-all-answers-btn"
            type="button"
            class="px-6 py-3 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 font-bold hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
      >
            Reveal All Answers
      </button>
</div>

<script>
      const showAllBtn = document.getElementById(
            "show-all-answers-btn"
      ) as HTMLButtonElement | null;

      if (showAllBtn) {
            showAllBtn.addEventListener("click", () => {
                  // Find all non-disabled "Check Answer" buttons
                  const allCheckButtons =
                        document.querySelectorAll<HTMLButtonElement>(
                              ".check-answer-btn:not([disabled])"
                        );

                  console.log(
                        `Found ${allCheckButtons.length} unanswered questions. Revealing...`
                  );

                  // Programmatically click each one
                  allCheckButtons.forEach((button) => button.click());

                  // Hide the "Show All Answers" button after use
                  showAllBtn.style.display = "none";
            });
      }
</script>
